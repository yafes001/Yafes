<Window x:Class="Yafes.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=""
        Height="745" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#0D0D0D"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True">

    <Window.Resources>
        <!-- Lambda Panel Style -->
        <Style x:Key="LambdaPanelStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1AFFA500" Offset="0"/>
                        <GradientStop Color="#95222222" Offset="0.2"/>
                        <GradientStop Color="#FA111111" Offset="0.8"/>
                        <GradientStop Color="#1AFFA500" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#99FFA500"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FFA500" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Lambda Button Style - Base -->
        <Style x:Key="LambdaButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#444444" Offset="0"/>
                        <GradientStop Color="#333333" Offset="0.5"/>
                        <GradientStop Color="#444444" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#FFA500"/>
            <Setter Property="FontFamily" Value="Trebuchet MS"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFA500"/>
            <Setter Property="Padding" Value="8,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FFA500" BlurRadius="6" ShadowDepth="0" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                Effect="{TemplateBinding Effect}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#555555" Offset="0"/>
                                            <GradientStop Color="#444444" Offset="0.5"/>
                                            <GradientStop Color="#555555" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="#FFD700"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FFD700" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Button Style - Ana Yükle Butonu -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFA500" Offset="0"/>
                        <GradientStop Color="#FF8C00" Offset="0.5"/>
                        <GradientStop Color="#FFA500" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontFamily" Value="Trebuchet MS"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#FFD700"/>
            <Setter Property="Padding" Value="8,8"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FFA500" BlurRadius="10" ShadowDepth="0" Opacity="0.8"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                Effect="{TemplateBinding Effect}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"
                                            TextBlock.Foreground="{TemplateBinding Foreground}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FF8C00" Offset="0"/>
                                            <GradientStop Color="#FF7F00" Offset="0.5"/>
                                            <GradientStop Color="#FF8C00" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="Black"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FFD700" BlurRadius="15" ShadowDepth="0" Opacity="1.0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Category Button Style - Kategori Butonları için -->
        <Style x:Key="CategoryButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#444444" Offset="0"/>
                        <GradientStop Color="#333333" Offset="0.5"/>
                        <GradientStop Color="#444444" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#FFA500"/>
            <Setter Property="FontFamily" Value="Trebuchet MS"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFA500"/>
            <Setter Property="Padding" Value="8,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FFA500" BlurRadius="6" ShadowDepth="0" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}"
                                Effect="{TemplateBinding Effect}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Mouse Over Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#555555" Offset="0"/>
                                            <GradientStop Color="#444444" Offset="0.5"/>
                                            <GradientStop Color="#555555" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="#FFD700"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FFD700" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Active/Selected State Effect -->
                            <Trigger Property="Tag" Value="Selected">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#66FFA500" Offset="0"/>
                                            <GradientStop Color="#4DFFA500" Offset="0.5"/>
                                            <GradientStop Color="#66FFA500" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="#FFD700"/>
                                <Setter Property="BorderBrush" Value="#FFD700"/>
                                <Setter Property="BorderThickness" Value="2"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FFD700" BlurRadius="12" ShadowDepth="0" Opacity="0.8"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <!-- Selected + MouseOver Combination -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Tag" Value="Selected"/>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FFD700" BlurRadius="15" ShadowDepth="0" Opacity="1.0"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Game Card Style - YENİ -->
        <Style x:Key="GameCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#80000000"/>
            <Setter Property="BorderBrush" Value="#FFA500"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FFA500" BlurRadius="6" ShadowDepth="0" Opacity="0.4"/>
                </Setter.Value>
            </Setter>
            <!-- EventSetter'lar GamesManager'da programatik olarak ekleniyor -->
        </Style>

        <!-- Lambda Text Style -->
        <Style x:Key="LambdaTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFA500"/>
            <Setter Property="FontFamily" Value="Trebuchet MS"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#FFA500" BlurRadius="8" ShadowDepth="1" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Terminal TextBox Style -->
        <Style x:Key="TerminalTextStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#66FF66"/>
            <Setter Property="FontFamily" Value="Courier New"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#66FF66" BlurRadius="8" ShadowDepth="0" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Lambda Progress Style -->
        <Style x:Key="LambdaProgressStyle" TargetType="ProgressBar">
            <Setter Property="Background" Value="#80000000"/>
            <Setter Property="BorderBrush" Value="#99FFA500"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Rectangle Name="PART_Track" Fill="#80000000"/>
                                <Rectangle Name="PART_Indicator" 
                                          Fill="#FFA500" 
                                          HorizontalAlignment="Left">
                                    <Rectangle.Effect>
                                        <DropShadowEffect Color="#FFD700" BlurRadius="15" ShadowDepth="0" Opacity="0.8"/>
                                    </Rectangle.Effect>
                                </Rectangle>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Lambda List Style -->
        <Style x:Key="LambdaListStyle" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontFamily" Value="Trebuchet MS"/>
            <Setter Property="FontSize" Value="8"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <!-- Lambda List Item Style -->
        <Style x:Key="LambdaListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="#00F5FF" 
                                BorderThickness="0,0,0,1"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A00F5FF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#3300F5FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LambdaCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#00F5FF"/>
            <Setter Property="FontFamily" Value="Trebuchet MS"/>
            <Setter Property="FontSize" Value="8"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#00F5FF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="15" Height="15" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Background="{TemplateBinding Background}">
                                <TextBlock x:Name="CheckMark" 
                                          Text="✓" 
                                          Foreground="{TemplateBinding Foreground}"
                                          FontSize="10" 
                                          FontWeight="Bold"
                                          HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"
                                          Visibility="Collapsed"/>
                            </Border>
                            <ContentPresenter Grid.Column="1" 
                                             Margin="5,0,0,0"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Left"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1A00F5FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Lambda Toggle Switch Style - Compact -->
        <Style x:Key="LambdaToggleStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#FFA500"/>
            <Setter Property="FontFamily" Value="Trebuchet MS"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Toggle Switch Container -->
                            <Border Grid.Column="0" Width="40" Height="20" 
                                    x:Name="ToggleContainer"
                                    Background="#80000000" 
                                    BorderBrush="#FFA500" 
                                    BorderThickness="2" 
                                    CornerRadius="10">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FFA500" BlurRadius="6" ShadowDepth="0" Opacity="0.4"/>
                                </Border.Effect>

                                <!-- Toggle Thumb -->
                                <Border x:Name="ToggleThumb" 
                                        Width="14" Height="14" 
                                        Background="#FFA500"
                                        BorderBrush="#FFD700" 
                                        BorderThickness="1"
                                        CornerRadius="7"
                                        HorizontalAlignment="Left"
                                        Margin="2,0,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="#FFD700" BlurRadius="4" ShadowDepth="0" Opacity="0.8"/>
                                    </Border.Effect>

                                    <!-- OFF Text -->
                                    <TextBlock x:Name="ToggleText" 
                                              Text="OFF" 
                                              Foreground="Black" 
                                              FontSize="6" 
                                              FontWeight="Bold"
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                                </Border>
                            </Border>

                            <!-- Label -->
                            <ContentPresenter Grid.Column="1" 
                                             Margin="8,0,0,0"
                                             VerticalAlignment="Center"
                                             HorizontalAlignment="Left"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Checked State -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="ToggleContainer" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="#4DFFA500" Offset="0"/>
                                            <GradientStop Color="#99FFA500" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="ToggleThumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="ToggleThumb" Property="Margin" Value="0,0,2,0"/>
                                <Setter TargetName="ToggleThumb" Property="Background" Value="#66FF66"/>
                                <Setter TargetName="ToggleThumb" Property="BorderBrush" Value="#00FF00"/>
                                <Setter TargetName="ToggleText" Property="Text" Value="ON"/>
                                <Setter TargetName="ToggleText" Property="Foreground" Value="Black"/>
                            </Trigger>

                            <!-- Mouse Over -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ToggleContainer" Property="BorderBrush" Value="#FFD700"/>
                                <Setter TargetName="ToggleThumb" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#FFD700" BlurRadius="8" ShadowDepth="0" Opacity="1"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Canvas Container -->
    <Canvas Name="MainCanvas" Background="#0D0D0D" Margin="0,0,0,47">

        <!-- Background Logo - Terminal arkasında -->
        <Image Canvas.Left="392" Canvas.Top="230" Width="364" Height="340"
               Source="/Resources/GifIcons/logo.png"
               Opacity="0.2" 
               Stretch="Uniform"
               Panel.ZIndex="10" HorizontalAlignment="Center" VerticalAlignment="Top"/>

        <!-- Header Panel -->
        <Border Canvas.Left="8" Canvas.Top="8" Width="1084" Height="60" 
                Style="{StaticResource LambdaPanelStyle}"
                MouseLeftButtonDown="Header_MouseLeftButtonDown">
            <Canvas>
                <!-- Logo -->
                <Border Canvas.Left="20" Canvas.Top="7" Width="45" Height="45" 
                        Background="#33FFA500" BorderBrush="#FFA500" BorderThickness="3">
                    <Image Source="/Resources/GifIcons/logo.png" 
                           Stretch="Uniform" 
                           Margin="3">
                        <Image.Effect>
                            <DropShadowEffect Color="#FFA500" BlurRadius="15" ShadowDepth="0"/>
                        </Image.Effect>
                        <Image.RenderTransform>
                            <ScaleTransform x:Name="LogoScale" CenterX="22" CenterY="22"/>
                        </Image.RenderTransform>
                        <Image.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="LogoScale" 
                                                                     Storyboard.TargetProperty="ScaleX">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1" Value="1.1"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:2" Value="1"/>
                                        </DoubleAnimationUsingKeyFrames>
                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetName="LogoScale" 
                                                                     Storyboard.TargetProperty="ScaleY">
                                            <EasingDoubleKeyFrame KeyTime="0:0:0" Value="1"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:1" Value="1.1"/>
                                            <EasingDoubleKeyFrame KeyTime="0:0:2" Value="1"/>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Image.Triggers>
                    </Image>
                </Border>

                <!-- Title Section -->
                <TextBlock Canvas.Left="80" Canvas.Top="15" Text="YAFES Tools" 
                          Style="{StaticResource LambdaTextStyle}" FontSize="18"/>
                <TextBlock Canvas.Left="80" Canvas.Top="35" Text="Auto Kurulum" 
                          Style="{StaticResource LambdaTextStyle}" FontSize="11" Foreground="#CC8400"/>

                <!-- Window Control Buttons -->
                <!-- Minimize Button -->
                <Button x:Name="btnMinimize" Canvas.Left="1010" Canvas.Top="12" Width="30" Height="30"
                       Style="{StaticResource LambdaButtonStyle}" Content="—" FontSize="14" FontWeight="Bold"
                       Click="MinimizeWindow_Click" ToolTip="Simge durumuna küçült">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#80000000" BorderBrush="#FFA500" BorderThickness="1"
                                    x:Name="ButtonBorder">
                                <TextBlock Text="{TemplateBinding Content}" 
                                          Foreground="#FFA500" FontWeight="Bold" FontSize="14"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#B3FFA500"/>
                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#FFD700" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Close Button -->
                <Button x:Name="btnClose" Canvas.Left="1045" Canvas.Top="12" Width="30" Height="30"
                       Style="{StaticResource LambdaButtonStyle}" Content="✕" FontSize="12" FontWeight="Bold"
                       Click="CloseWindow_Click" ToolTip="Kapat">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="#80000000" BorderBrush="#FF4444" BorderThickness="1"
                                    x:Name="ButtonBorder">
                                <TextBlock Text="{TemplateBinding Content}" 
                                          Foreground="#FF4444" FontWeight="Bold" FontSize="12"
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="ButtonBorder" Property="Background" Value="#B3FF4444"/>
                                    <Setter TargetName="ButtonBorder" Property="BorderBrush" Value="#FF6666"/>
                                    <Setter TargetName="ButtonBorder" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="#FF6666" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Canvas>
        </Border>

        <!-- Left Sidebar -->
        <Border Canvas.Left="8" Canvas.Top="76" Width="250" Height="626" 
                Style="{StaticResource LambdaPanelStyle}">
            <Canvas Margin="15">
                <!-- System Info Section - SADECE GPU İÇİN GENİŞLETİLMİŞ -->
                <Border Canvas.Left="0" Canvas.Top="0" Width="220" Height="120" 
                        Background="#80000000" BorderBrush="#66FFA500" BorderThickness="1">
                    <Canvas Margin="10">
                        <TextBlock Canvas.Left="0" Canvas.Top="0" Text="SİSTEM BİLGİSİ" 
                                  Style="{StaticResource LambdaTextStyle}" FontSize="12"/>

                        <!-- OS Bilgisi -->
                        <TextBlock Canvas.Left="0" Canvas.Top="25" Text="OS:" Foreground="#CCCCCC" FontSize="9" Width="40"/>
                        <TextBlock x:Name="txtOSInfo" Canvas.Left="42" Canvas.Top="25" Text="Yükleniyor..." 
                                  Style="{StaticResource LambdaTextStyle}" FontSize="9" Width="160"/>

                        <!-- GPU Bilgisi - GENİŞLETİLDİ -->
                        <TextBlock Canvas.Left="0" Canvas.Top="42" Text="GPU:" Foreground="#CCCCCC" FontSize="9" Width="40"/>
                        <TextBlock x:Name="txtGPUInfo" Canvas.Left="42" Canvas.Top="42" Text="Yükleniyor..." 
                                  Style="{StaticResource LambdaTextStyle}" FontSize="9" Width="160"/>

                        <!-- RAM Bilgisi -->
                        <TextBlock Canvas.Left="0" Canvas.Top="59" Text="RAM:" Foreground="#CCCCCC" FontSize="9" Width="40"/>
                        <TextBlock x:Name="txtRAMInfo" Canvas.Left="42" Canvas.Top="59" Text="Yükleniyor..." 
                                  Style="{StaticResource LambdaTextStyle}" FontSize="9" Width="160"/>

                        <!-- OS Version Bilgisi -->
                        <TextBlock Canvas.Left="0" Canvas.Top="76" Text="Ver:" Foreground="#CCCCCC" FontSize="9" Width="40"/>
                        <TextBlock x:Name="txtOSVersion" Canvas.Left="42" Canvas.Top="76" Text="Yükleniyor..." 
                                  Style="{StaticResource LambdaTextStyle}" FontSize="9" Width="160"/>
                    </Canvas>
                </Border>

                <!-- Operations Section -->
                <Border Canvas.Left="0" Canvas.Top="125" Width="220" Height="241" 
                        Background="#80000000" BorderBrush="#66FFA500" BorderThickness="1">
                    <Canvas Margin="12">
                        <TextBlock Canvas.Left="0" Canvas.Top="0" Text="İŞLEMLER" 
                                  Style="{StaticResource LambdaTextStyle}" FontSize="12"/>

                        <Button x:Name="btnInstall" Canvas.Left="12" Canvas.Top="25" Width="184" 
                               Style="{StaticResource PrimaryButtonStyle}" Content="📥 YÜKLE" 
                               Click="btnInstall_Click"/>

                        <Button x:Name="btnFolder" Canvas.Left="12" Canvas.Top="62" Width="184" 
                               Style="{StaticResource LambdaButtonStyle}" Content="📂 KLASÖR AÇ" 
                               Click="btnFolder_Click"/>

                        <Button x:Name="btnAddDriver" Canvas.Left="12" Canvas.Top="90" Width="184" 
                               Style="{StaticResource LambdaButtonStyle}" Content="🔧 MANUEL YÜKLE" 
                               Click="btnAddDriver_Click"/>

                        <Button Canvas.Left="12" Canvas.Top="118" Width="184" 
                               Style="{StaticResource LambdaButtonStyle}" Content="⚙️ ALTERNATİF"/>
                    </Canvas>
                </Border>

                <!-- Active Installations Section -->
                <Border Canvas.Left="0" Canvas.Top="371" Width="220" Height="221" 
                        Background="#80000000" BorderBrush="#66FFA500" BorderThickness="1">
                    <Canvas Margin="12,12,12,-1">
                        <TextBlock Canvas.Left="0" Canvas.Top="0" Text="AKTİF KURULUMLAR" 
                                  Style="{StaticResource LambdaTextStyle}" FontSize="12"/>

                        <ScrollViewer Canvas.Left="0" Canvas.Top="25" Width="196" Height="170" 
                                     VerticalScrollBarVisibility="Hidden" 
                                     HorizontalScrollBarVisibility="Hidden">
                            <StackPanel x:Name="activeInstallationsPanel" Background="Transparent" Height="178">
                                <TextBlock x:Name="noActiveInstallationsText" 
                                          Text="Henüz aktif kurulum yok" 
                                          Foreground="#666666" 
                                          FontSize="9" 
                                          FontStyle="Italic"
                                          TextAlignment="Center"
                                          Margin="0,20,0,0"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Canvas>
                </Border>
            </Canvas>
        </Border>

        <!-- Main Terminal Area - ANİMASYONLU -->
        <Border Canvas.Left="266" Canvas.Top="76" Width="616" Height="596" 
                Style="{StaticResource LambdaPanelStyle}"
                Tag="TerminalPanel">
            <Border.RenderTransform>
                <TranslateTransform Y="0"/>
            </Border.RenderTransform>
            <Canvas>
                <!-- Terminal Header -->
                <Border Canvas.Left="0" Canvas.Top="0" Width="616" Height="28" 
                        BorderThickness="0,0,0,1" BorderBrush="#FFA500">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#B3FFA500" Offset="0"/>
                            <GradientStop Color="#E6FFA500" Offset="0.5"/>
                            <GradientStop Color="#B3FFA500" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock Text="LOG " Foreground="Black" FontWeight="Bold" 
                              FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,0,0,0"/>
                </Border>

                <!-- Terminal Content -->
                <ScrollViewer Canvas.Left="15" Canvas.Top="43" Width="586" Height="523" 
                             VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="txtLog" Style="{StaticResource TerminalTextStyle}"
                            Width="570" Height="520"
                            Text=""
                            TextChanged="txtLog_TextChanged"/>
                </ScrollViewer>
            </Canvas>
        </Border>

        <!-- YENİ GAMES PANEL - BAŞLANGIÇTA GİZLİ -->
        <Border Canvas.Left="266" Canvas.Top="76" Width="616" Height="290" 
                Style="{StaticResource LambdaPanelStyle}"
                Visibility="Collapsed"
                Tag="GamesPanel">
            <Border.RenderTransform>
                <TranslateTransform Y="-50"/>
            </Border.RenderTransform>
            <Canvas>
                <!-- Games Header -->
                <Border Canvas.Left="0" Canvas.Top="0" Width="616" Height="28" 
                        BorderThickness="0,0,0,1" BorderBrush="#FFA500">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#B3FFA500" Offset="0"/>
                            <GradientStop Color="#E6FFA500" Offset="0.5"/>
                            <GradientStop Color="#B3FFA500" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock Text="🎮 OYUNLAR" Foreground="Black" FontWeight="Bold" 
                              FontSize="14" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,0,0,0"/>
                </Border>

                <!-- Games Content Grid -->
                <ScrollViewer Canvas.Left="15" Canvas.Top="43" Width="586" Height="227" 
                             VerticalScrollBarVisibility="Auto">
                    <UniformGrid x:Name="gamesGrid" Columns="4" Margin="10">
                        <!-- Steam -->
                        <Border Style="{StaticResource GameCardStyle}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="🎯" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock Text="Steam" FontSize="10" FontWeight="Bold" 
                                          Style="{StaticResource LambdaTextStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="150 MB" FontSize="8" Foreground="#888" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Epic Games -->
                        <Border Style="{StaticResource GameCardStyle}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="🎮" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock Text="Epic Games" FontSize="10" FontWeight="Bold" 
                                          Style="{StaticResource LambdaTextStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="200 MB" FontSize="8" Foreground="#888" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- GOG Galaxy -->
                        <Border Style="{StaticResource GameCardStyle}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="🎲" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock Text="GOG Galaxy" FontSize="10" FontWeight="Bold" 
                                          Style="{StaticResource LambdaTextStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="80 MB" FontSize="8" Foreground="#888" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Origin -->
                        <Border Style="{StaticResource GameCardStyle}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="⚡" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock Text="Origin" FontSize="10" FontWeight="Bold" 
                                          Style="{StaticResource LambdaTextStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="120 MB" FontSize="8" Foreground="#888" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Battle.net -->
                        <Border Style="{StaticResource GameCardStyle}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="🚀" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock Text="Battle.net" FontSize="10" FontWeight="Bold" 
                                          Style="{StaticResource LambdaTextStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="90 MB" FontSize="8" Foreground="#888" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Ubisoft Connect -->
                        <Border Style="{StaticResource GameCardStyle}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="🎪" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock Text="Ubisoft Connect" FontSize="10" FontWeight="Bold" 
                                          Style="{StaticResource LambdaTextStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="110 MB" FontSize="8" Foreground="#888" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Rockstar -->
                        <Border Style="{StaticResource GameCardStyle}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="🎭" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock Text="Rockstar" FontSize="10" FontWeight="Bold" 
                                          Style="{StaticResource LambdaTextStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="85 MB" FontSize="8" Foreground="#888" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <!-- Xbox App -->
                        <Border Style="{StaticResource GameCardStyle}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="⭐" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                                <TextBlock Text="Xbox App" FontSize="10" FontWeight="Bold" 
                                          Style="{StaticResource LambdaTextStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Text="95 MB" FontSize="8" Foreground="#888" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </ScrollViewer>
            </Canvas>
        </Border>

        <!-- Energy Bar -->
        <Border Canvas.Left="266" Canvas.Top="680" Width="824" Height="22" 
                Style="{StaticResource LambdaPanelStyle}">
            <ProgressBar x:Name="progressBar" Style="{StaticResource LambdaProgressStyle}" 
                        Margin="-2,0,8,0" Height="10" VerticalAlignment="Center"/>
        </Border>

        <!-- Right Sidebar -->
        <Border Canvas.Left="890" Canvas.Top="76" Width="200" Height="596" 
                Style="{StaticResource LambdaPanelStyle}">
            <Canvas Margin="15">
                <!-- Categories Section -->
                <Border Canvas.Left="0" Canvas.Top="0" Width="170" Height="163" 
                        Background="#80000000" BorderBrush="#66FFA500" BorderThickness="1">
                    <Canvas Margin="10">
                        <TextBlock Canvas.Left="0" Canvas.Top="0" Text="KATEGORİ" 
                                  Style="{StaticResource LambdaTextStyle}" FontSize="12"/>

                        <Button x:Name="btnDriverCategory" Canvas.Left="10" Canvas.Top="25" Width="140" 
                               Style="{StaticResource CategoryButtonStyle}" Content="🔧 Programs" 
                               Click="CategoryButton_Click"/>

                        <Button x:Name="btnProgramsCategory" Canvas.Left="10" Canvas.Top="53" Width="140" 
                               Style="{StaticResource CategoryButtonStyle}" Content="📦 Drivers" 
                               Tag="Selected"
                               Click="CategoryButton_Click"/>

                        <Button x:Name="btnGamesCategory" Canvas.Left="10" Canvas.Top="81" Width="140" 
                               Style="{StaticResource CategoryButtonStyle}" Content="🎮 Games"
                               Click="CategoryButton_Click"/>

                        <Button x:Name="btnToolsCategory" Canvas.Left="10" Canvas.Top="109" Width="140" 
                               Style="{StaticResource CategoryButtonStyle}" Content="⚙️ Tools"
                               Click="CategoryButton_Click"/>
                    </Canvas>
                </Border>

                <!-- Installation Queue -->
                <Border Canvas.Top="168" Width="170" Height="404" 
                        Background="#1AFFA500" BorderBrush="#4DFFA500" BorderThickness="1">
                    <Canvas Margin="8">
                        <TextBlock Canvas.Left="0" Canvas.Top="0" Text="KURULUM KUYRUĞU" 
                                  Style="{StaticResource LambdaTextStyle}" FontSize="10"/>

                        <ListBox Canvas.Left="0" Canvas.Top="20" Width="154" Height="376"
                                Style="{StaticResource LambdaListStyle}"
                                ItemContainerStyle="{StaticResource LambdaListItemStyle}"
                                Tag="MainDriversList">
                        </ListBox>
                    </Canvas>
                </Border>
            </Canvas>
        </Border>

        <!-- Footer Bar -->
        <Border Canvas.Left="8" Canvas.Top="710" Width="1082" Height="32" 
                Style="{StaticResource LambdaPanelStyle}">
            <Canvas Margin="20,0">
                <!-- Lambda Status Left -->
                <Border Canvas.Left="0" Canvas.Top="6" Width="20" Height="20" 
                        Background="#4DFFA500" BorderBrush="#FFA500" BorderThickness="1">
                    <TextBlock Text="λ" Foreground="#FFA500" FontSize="12" FontWeight="Bold"
                              HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.RenderTransform>
                            <RotateTransform x:Name="FooterLambdaRotation" CenterX="10" CenterY="10"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard>
                                    <Storyboard RepeatBehavior="Forever">
                                        <DoubleAnimation Storyboard.TargetName="FooterLambdaRotation"
                                                       Storyboard.TargetProperty="Angle"
                                                       From="0" To="360" Duration="0:0:6"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </TextBlock.Triggers>
                    </TextBlock>
                </Border>

                <!-- Restart Toggle -->
                <CheckBox x:Name="chkRestart" Canvas.Left="30" Canvas.Top="6" Content="RESTART" 
                         Style="{StaticResource LambdaToggleStyle}"
                         Checked="chkRestart_CheckedChanged" Unchecked="chkRestart_CheckedChanged" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <!-- Status Text -->
                <TextBlock x:Name="txtStatusBar" Canvas.Left="766" Canvas.Top="9" 
                          Text="" 
                          Style="{StaticResource LambdaTextStyle}" 
                          FontSize="10"/>

                <!-- Progress Bar Right -->
                <ProgressBar x:Name="progressBarStatus" Canvas.Left="961" Canvas.Top="7" 
                            Width="89" Height="14" Value="0" 
                            Style="{StaticResource LambdaProgressStyle}"/>
            </Canvas>
        </Border>
    </Canvas>
</Window>